<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag 'favicon.png' %>
    <title>Etsy.com | Shop for anything from creative people everwhere</title>
    <%= csrf_meta_tags %>
	
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://js.stripe.com/v2/" %>
    <%= tag :meta, :name => "stripe-key", :content => ENV["STRIPE_PUBLIC_KEY"] %>
  </head>

  <body>
  

<%= render 'shared/header' %>
<% if request.original_url == root_url %>
<%= render 'shared/carousel' %>    
  
<% end %>

<div class="container">
	
		  <% flash.each do |name, msg| %>
		    <% if msg.is_a?(String) %>
		      <div class="alert alert-<%= name.to_s == "notice" ? "success" : "danger" %> alert-dismissable">
		        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		        <%= content_tag :div, msg, :id => "flash_#{name}" %>
		      </div>
		    <% end %>
		  <% end %>

    <%= yield %>

</div>
<% if request.original_url == root_url %>
<%= render 'shared/template' %> 
<%= render 'shared/footer' %>    
<% end %>

<%= render 'shared/copyright' %>  

  </body>
</html>
 