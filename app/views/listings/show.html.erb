<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">
		<%= image_tag @listing.image.url %>
		</div>
	</div>

	<div class="col-md-6">
		<h3> <%= @listing.name %></h3>
		<p><%= number_to_currency(@listing.price) %></p>
		<p><%= @listing.description %></p>
		<br>
		<div class="center" >
		<%= link_to "Buy It now", new_listing_order_path(@listing), class: "btn btn-primary", data: { no_turbolink: true } %>
		</div>
	</div>
</div>

<!-- This is for user who did not creat this item will not see the edit link. In otherwords if current user is the one who created the item show edit link -->
<%  if current_user == @listing.user %>
<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
<%  end %>
<%= link_to 'Back', listings_path, class: "btn btn-link" %>
